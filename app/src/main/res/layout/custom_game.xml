<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000">

    <Button
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:backgroundTint="#3a5da9"
        android:fontFamily="@font/aldrich"
        android:onClick="createGame"
        android:text="@string/start_game"
        android:textColor="#ffcb05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/columnsDropdown" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="@string/rows"
        android:textColor="#ffcb05"
        app:layout_constraintBottom_toTopOf="@+id/rowsDropdown"
        app:layout_constraintStart_toStartOf="@+id/rowsDropdown" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="@string/columns"
        android:textColor="#ffcb05"
        app:layout_constraintBottom_toTopOf="@+id/columnsDropdown"
        app:layout_constraintStart_toStartOf="@+id/columnsDropdown" />

    <Spinner
        android:id="@+id/rowsDropdown"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:background="#3a5da9"
        android:backgroundTint="#3a5da9"
        android:popupBackground="#3a5da9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/columnsDropdown"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="56dp"
        android:background="#3a5da9"
        android:backgroundTint="#3a5da9"
        android:popupBackground="#3a5da9"
        app:layout_constraintStart_toStartOf="@+id/rowsDropdown"
        app:layout_constraintTop_toBottomOf="@+id/rowsDropdown" />
</androidx.constraintlayout.widget.ConstraintLayout>